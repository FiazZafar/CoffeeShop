<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/items_list_relative"

    >
<androidx.cardview.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/Porcelain"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/americano_img"
        android:background="@drawable/img_round"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:id="@+id/linearOfItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/item_img"

        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textStyle="bold"
            android:text="Americano"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/gradientQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/RoseTaupe"
            android:text="with milk"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ratingRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearOfItemText"
        android:layout_marginTop="5dp"
        >
        <ImageView
            android:id="@+id/ratingStar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/star_big_on"
            android:alpha="0.7"
/>
        <TextView
            android:id="@+id/ratingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/ratingStar"
            android:text="4.5"
            android:layout_centerVertical="true"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="1dp"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.00"
            android:textStyle="bold"
            android:layout_below="@id/ratingRelative"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:textColor="@color/Chocolate"/>
        <ImageButton
            android:id="@+id/addToCartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ratingRelative"
            android:layout_alignEnd="@id/linearOfItemText"
            android:background="@drawable/add_to_cart_btn_shape"
            android:src="@android:drawable/ic_input_add"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>