<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="50dp"
    android:elevation="50dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/itemimage_cart"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/americano_img"
        android:background="@drawable/img_round"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        />

    <RelativeLayout
        android:id="@+id/relativeCart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/itemimage_cart"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >
        <TextView
            android:id="@+id/itemNameCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:text="@string/app_name"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/cart_ingradients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="with milk 2%,\nwith shuger 2%"
            android:textColor="@color/Black"
            android:layout_below="@id/itemNameCart"
            android:textSize="15sp"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/cart_price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemimage_cart"
        android:text="Price: $4.8"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:layout_marginStart="25dp"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        />
    <TextView
        android:id="@+id/cart_quantity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemimage_cart"
        android:layout_alignParentEnd="true"
        android:text="Quantity: 2"
        android:textColor="@color/Black"
        android:textStyle="bold"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="20dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        />

    <ImageButton
        android:id="@+id/cart_edit_item_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/editicon"
        android:background="@drawable/img_round"
        android:padding="10dp"
        android:layout_margin="20dp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>