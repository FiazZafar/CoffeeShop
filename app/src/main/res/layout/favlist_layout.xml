<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favRecycler"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="50dp"
    android:elevation="50dp"
    app:cardBackgroundColor="@color/RoseTaupe">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativefavA"
        >
        <ImageView
            android:id="@+id/itemimage_fav"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/americano_img"
            android:background="@drawable/img_round"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            />

        <RelativeLayout
            android:id="@+id/relativefav1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemimage_fav"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"

            >
            <TextView
                android:id="@+id/itemNamefav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:text="@string/app_name"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/fav_ingradients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="with milk 2%,\nwith shuger 2%"
                android:textColor="@color/white"
                android:layout_below="@id/itemNamefav"
                android:textSize="15sp"/>

        </RelativeLayout>
        <TextView
            android:id="@+id/fav_price_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemimage_fav"
            android:text="Price: $4.8"
            android:textStyle="bold"
            android:textColor="@color/Porcelain"
            android:layout_marginStart="25dp"
            android:paddingStart="10dp"
            android:paddingBottom="5dp"
            />

        <ImageButton
            android:id="@+id/fav_add_item_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_input_add"
            android:background="@drawable/add_to_cart_btn_of_fav_bg"
            android:padding="3dp"
            android:layout_marginEnd="30dp"/>

        <RelativeLayout
            android:id="@+id/ratingRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/fav_add_item_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"

            >
            <ImageView
                android:id="@+id/ratingStar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/star_big_on"
                android:alpha="0.7"
                />
            <TextView
                android:id="@+id/ratingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/ratingStar"
                android:text="4.5"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="1dp"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>